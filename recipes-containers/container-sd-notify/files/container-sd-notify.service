[Unit]
Description=Example container using systemd-notify
# wait for network to come up before we run
After=network.target

[Service]
Type=notify
NotifyAccess=all
WorkingDirectory=/apps/container-sd-notify/
ExecStartPre=/usr/bin/runc delete container-sd-notify -f
ExecStart=/usr/bin/runc run container-sd-notify
ExecStop=/usr/bin/runc delete container-sd-notify -f
ExecStartPost=/bin/sh /usr/bin/fullmetalupdate/scripts/send_feedback.sh
ExecStopPost=/bin/sh /usr/bin/fullmetalupdate/scripts/send_feedback.sh
# After this timeout, systemd will consider the startup as failed and stop the 
# container, and the container will rollback to its previous version
TimeoutStartSec=35s
